extends ../layouts/main

block content
  .d-flex.justify-content-between.align-items-center.mb-4
    h1 All Users
    a.btn.btn-primary(href="/posts") Back to Posts

  if users.length
    table.table.table-hover.table-striped
      thead.table-dark
        tr
          th #  (Serial Number)
          th Username
          th Email
          th Admin Status
          th Registered On
      tbody
        each user, index in users
          tr
            td #{index + 1}
            td #{user.username}
            td #{user.email}
            td 
              if user.isAdmin
                span.badge.bg-success Admin
              else
                span.badge.bg-secondary User
            td #{new Date(user.createdAt).toLocaleDateString()}
  else
    .alert.alert-info No users found.
